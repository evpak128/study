<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hospital_personal_doctor_history_tree" model="ir.ui.view">
        <field name="name">hr.hospital.personal.doctor.history.tree</field>
        <field name="model">hr.hospital.personal.doctor.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="appointment_date"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_personal_doctor_history_form" model="ir.ui.view">
        <field name="name">hr.hospital.personal.doctor.history.form</field>
        <field name="model">hr.hospital.personal.doctor.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="personal_doctor_id"/>
                        <field name="patient_id"/>
                        <field name="appointment_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_personal_doctor_history_act_window" model="ir.actions.act_window">
        <field name="name">Personal Doctor History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.personal.doctor.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_personal_doctor_history_menu"
              parent="hr_hospital.hr_hospital_main_menu"
              action="hr_hospital.hr_hospital_personal_doctor_history_act_window"
              name="Personal Doctor History" sequence="200"/>
</odoo>

