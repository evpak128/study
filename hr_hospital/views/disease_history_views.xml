<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hospital_disease_history_tree" model="ir.ui.view">
        <field name="name">hr.hospital.disease.history.tree</field>
        <field name="model">hr.hospital.disease.history</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="disease_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_disease_history_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.history.form</field>
        <field name="model">hr.hospital.disease.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="disease_id"/>
                        <field name="date_of_diagnosis"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_disease_history_act_window" model="ir.actions.act_window">
        <field name="name">Disease History</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.disease.history</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_disease_history_menu"
              parent="hr_hospital.hr_hospital_disease_main_menu"
              action="hr_hospital.hr_hospital_disease_history_act_window"
              name="Disease History" sequence="200"/>
</odoo>

