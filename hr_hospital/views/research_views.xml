<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hospital_research_tree" model="ir.ui.view">
        <field name="name">hr.hospital.research.tree</field>
        <field name="model">hr.hospital.research</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>

            </tree>
        </field>
    </record>

    <record id="hr_hospital_research_form" model="ir.ui.view">
        <field name="name">hr.hospital.research.form</field>
        <field name="model">hr.hospital.research</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="example"/>
                        <field name="research_type"/>
                        <field name="result"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_research_act_window" model="ir.actions.act_window">
        <field name="name">Research</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.research</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_research_main_menu"
              parent="hr_hospital.hr_hospital_main_menu"
              name="Research" sequence="200"/>

    <menuitem id="hr_hospital_research_menu"
              parent="hr_hospital.hr_hospital_research_main_menu"
              action="hr_hospital.hr_hospital_research_act_window"
              name="Research" sequence="200"/>

    <menuitem id="hr_hospital_example_menu"
              parent="hr_hospital.hr_hospital_research_main_menu"
              action="hr_hospital.hr_hospital_example_act_window"
              name="Research" sequence="200"/>
</odoo>

