<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hospital_disease_type_tree" model="ir.ui.view">
        <field name="name">hr.hospital.disease.type.tree</field>
        <field name="model">hr.hospital.disease.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="complete_name"/>

            </tree>
        </field>
    </record>

    <record id="hr_hospital_disease_type_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.type.form</field>
        <field name="model">hr.hospital.disease.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="complete_name"/>
                        <field name="parent_id"/>
                        <field name="child_id"/>
                        <field name="parent_path"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_disease_type_act_window" model="ir.actions.act_window">
        <field name="name">Disease Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.disease.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_disease_type_menu"
              parent="hr_hospital.hr_hospital_disease_main_menu"
              action="hr_hospital.hr_hospital_disease_type_act_window"
              name="Disease Type" sequence="45"/>
</odoo>

