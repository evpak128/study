<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Назва "id" згідно рекомендацій - "hr_hospital_menu_main" -->
        <!-- Помилка у параметрі "web_icon" - повинна бути повна назва модуля -->
        <menuitem id="hr_hosp_main_menu"
                  web_icon="hr_hospital,static/description/icon.png"
                  name="Hospital" sequence="300"/>

        <!-- Назва меню краще давати просто "Patients" -->
        <!-- Краще додати "action", щоб список відображався при натисканні  -->
        <menuitem id="hr_hosp_patient_list_menu"
                  parent="hr_hosp_main_menu"
                  name="Patient List" sequence="100"/>

        <menuitem id="hr_hosp_doctor_list_menu"
                  parent="hr_hosp_main_menu"
                  name="Doctor List" sequence="150"/>

        <menuitem id="hr_hosp_disease_list_menu"
                  parent="hr_hosp_main_menu"
                  name="Disease List" sequence="150"/>

        <menuitem id="hr_hosp_patient_visit_list_menu"
                  parent="hr_hosp_main_menu"
                  name="Visit List" sequence="150"/>

        <menuitem id="hr_hosp_settings_main_menu"
                  parent = "hr_hosp_main_menu"

                  name="Settings" sequence="9999"/>

</odoo>

