<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient.tree</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="personal_doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_patient_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.form</field>
        <field name="model">hr.hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="birthday"/>
                        <field name="phone_number"/>
                        <field name="email"/>
                        <field name="gender"/>
                        <field name="photo"/>
                        <field name="age"/>
                        <field name="passport_info"/>
                        <field name="personal_doctor_id"/>
                        <field name="personal_doctors_ids">
                            <tree>
                                <field name="personal_doctor_id"/>
                                <field name="appointment_date"/>
                            </tree></field>
                        <field name="diagnosis_history_ids">
                            <tree>
                                <field name="diagnosis_id"/>
                                <field name="date_of_visit"/>
                            </tree></field>
                        <field name="disease_ids" widget="many2many_tags"/>
                        <field name="contact_person_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="hr_hospital_patient_act_window" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_patient_menu"
              parent="hr_hospital.hr_hospital_main_menu"
              action="hr_hospital.hr_hospital_patient_act_window"
              name="Patients" sequence="20"/>
</odoo>
