<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hospital_analysis_tree" model="ir.ui.view">
        <field name="name">hr.hospital.analysis.tree</field>
        <field name="model">hr.hospital.analysis</field>
        <field name="arch" type="xml">
            <tree>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="phone_number"/>
                <field name="analysis_name"/>
                <field name="analysis_type"/>
                <field name="date_of_analysis"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_analysis_form" model="ir.ui.view">
        <field name="name">hr.hospital.analysis.form</field>
        <field name="model">hr.hospital.analysis</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="phone_number"/>
                        <field name="doctor_id"/>
                        <field name="analysis_name"/>
                        <field name="analysis_type"/>
                        <field name="date_of_analysis"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_analysis_search" model="ir.ui.view">
        <field name="name">hr.hospital.analysis.search</field>
        <field name="model">hr.hospital.analysis</field>
        <field name="arch" type="xml">
            <search>
                <filter name="date_of_analysis" date="date_of_analysis" string="Date of analysis"/>
                <filter name="group_by_type" string="Type" context="{'group_by': 'analysis_type'}"/>
                <field name="patient_id"/>
                <field name="phone_number"/>
            </search>
        </field>
    </record>

    <record id="hr_hospital_analysis_pivot" model="ir.ui.view">
        <field name="name">hr.hospital.analysis.pivot</field>
        <field name="model">hr.hospital.analysis</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="date_of_analysis" interval="month" type="row"/>
                <field name="patient_id" type="row"/>
                <field name="analysis_type" type="col"/>
            </pivot>
        </field>
    </record>


    <record id="hr_hospital_analysis_act_window" model="ir.actions.act_window">
        <field name="name">Analysis</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.analysis</field>
        <field name="view_mode">tree,form,pivot</field>
    </record>

    <menuitem id="hr_hospital_analysis_menu"
              parent="hr_hospital.hr_hospital_main_menu"
              action="hr_hospital.hr_hospital_analysis_act_window"
              name="Analysis" sequence="200"/>
</odoo>

