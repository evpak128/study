<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.tree</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="specialty"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_patient_visit_action_form" model="ir.actions.act_window">
        <field name="name">Create visit</field>
        <field name="res_model">hr.hospital.patient.visit</field>
        <field name="view_mode">form</field>
        <field name="context">{'default_doctor_id': active_id}</field>
    </record>

    <record id="hr_hospital_doctor_kanban" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.kanban</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="specialty">
                <field name="name"/>
                <field name="specialty"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_card_header_title">
                                <span>Name:
                                    <field name="name"/>
                                </span>
                                <br/>
                                <span>Specialty:
                                    <field name="specialty"/>
                                </span>
                                <br/>
                                <span>Patients:
                                    <field name="personal_patient_ids" widget="many2many_tags"/>
                                </span>
                            </div>
                            <div class="oe_kanban_footer">
                                <button class="btn btn-primary" type="action"
                                        name="%(hr_hospital_patient_visit_action_form)d">Create visit
                                </button>
                            </div>
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle btn" data-toggle="dropdown"
                                   href="#">
                                    <span class="fa fa-ellipsis-v" aria-hidden="true"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable">
                                        <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    </t>
                                    <t t-if="widget.deletable">
                                        <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <widget name="web_ribbon" title="Intern" bg_color="bg-danger"
                            attrs="{'invisible': [('is_intern', '=', False)]}"/>
                    <group>
                        <field name="name"/>
                        <field name="specialty"/>
                        <field name="is_intern"/>
                        <field name="mentor_id" attrs="{'invisible':[('is_intern', '=', False)]}"/>
                        <field name="phone_number"/>
                        <field name="email"/>
                        <field name="gender"/>
                        <field name="photo"/>
                    </group>
                    <field name="intern_ids" mode="kanban">
                        <kanban>
                            <field name="name"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_global_click">
                                        <div class="oe_kanban_details">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_doctor" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <filter name="is_intern" string="Interns" domain="[('is_intern','=',1)]"/>
                <filter name="mentor" string="Mentors" domain="[('intern_ids.is_intern','=',1)]"/>
                <filter name="not_personal_doctor" string="Not Personal doctor"
                        domain="[('personal_patient_ids','=',False)]"/>
            </search>
        </field>
    </record>

    <record id="hr_hospital_doctor_act_window" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">tree,form,kanban</field>
    </record>

    <menuitem id="hr_hospital_doctor_main_menu"
              parent="hr_hospital.hr_hospital_main_menu"
              name="Doctors" sequence="10"/>

    <menuitem id="hr_hospital_doctor_menu"
              parent="hr_hospital.hr_hospital_doctor_main_menu"
              action="hr_hospital.hr_hospital_doctor_act_window"
              name="Doctors" sequence="10"/>
</odoo>
