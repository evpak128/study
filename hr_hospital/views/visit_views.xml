<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_hospital_patient_visit_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient.visit.tree</field>
        <field name="model">hr.hospital.patient.visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>

            </tree>
        </field>
    </record>

    <record id="hr_hospital_patient_visit_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient.visit.form</field>
        <field name="model">hr.hospital.patient.visit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="doctor_id"/>
                        <field name="diagnosis_id"/>
                        <field name="patient_id"/>
                        <field name="date_of_visit"/>
                        <field name="recommendation"/>
                        <field name="research_ids"/>
                        <field name="doctor_schedule_ids">
                            <tree>
                                <field name="doctor_id" attrs="{'readonly': [('is_visit_done', '!=', False)]}"/>
                                <field name="start_date" attrs="{'readonly': [('is_visit_done', '!=', False)]}"/>
                                <field name="end_date" attrs="{'readonly': [('is_visit_done', '!=', False)]}"/>
                                <field name="is_visit_done"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_hospital_patient_visit_act_window" model="ir.actions.act_window">
        <field name="name">Patient Visit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patient.visit</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_patient_visit_menu"
              parent="hr_hospital.hr_hospital_main_menu"
              action="hr_hospital.hr_hospital_patient_visit_act_window"
              name="Patient Visits" sequence="30"/>
</odoo>

