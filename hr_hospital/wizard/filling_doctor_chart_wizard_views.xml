<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="filling_doctor_chart_wizard_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.filling.doctor.chart.wizard.view.form</field>
        <field name="model">hr.hospital.filling.doctor.chart.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="doctor_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="start_time_pair"/>
                        <field name="end_time_pair"/>
                        <field name="start_time_unpair"/>
                        <field name="end_time_unpair"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Fill" type="object"
                            name="action_fill_chart" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" type="object"
                            class="btn btn-secondary oe_inline"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="hr_hospital_filling_doctor_chart_wizard" model="ir.actions.act_window">
        <field name="name">Filling Doctor Chart</field>
        <field name="res_model">hr.hospital.filling.doctor.chart.wizard</field>
        <field name="view_mode">form</field>
        <!--        <field name="view_id" ref="filling_doctor_chart_wizard_view_form"/>-->
        <field name="target">new</field>
        <!--        <field name="context">{}</field>-->
        <!--        <field name="binding_model_id" ref="model_hr_hospital_doctor_schedule"/>-->
        <!--        <field name="binding_view_types">list</field>-->
    </record>

    <menuitem id="hr_hospital_wizards_root_menu"
              parent="hr_hospital.hr_hospital_main_menu"
              name="Wizards" sequence="20"/>

    <menuitem id="hr_hospital_wizards_menu"
              parent="hr_hospital.hr_hospital_wizards_root_menu"
              action="hr_hospital.hr_hospital_filling_doctor_chart_wizard"
              name="Filling Doctor Chart" sequence="20"/>

</odoo>

