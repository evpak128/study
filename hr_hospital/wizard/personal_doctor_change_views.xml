<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="hr_hospital_personal_doctor_change_view_form" model="ir.ui.view">
        <field name="name">personal.doctor.change.view.form</field>
        <field name="model">personal.doctor.change</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="personal_doctor_id"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Change Doctor" type="object"
                                name="personal_doctor_change" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" type="object"
                                class="btn btn-secondary oe_inline"/></footer>
            </form>
        </field>
    </record>



    <record id="hr_hospital_personal_doctor_change_act_window_wizard" model="ir.actions.act_window">
        <field name="name">Multiple Doctor Change</field>
        <field name="res_model">personal.doctor.change</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_hospital_personal_doctor_change_view_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
        <field name="binding_model_id" ref="model_hr_hospital_patient"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>

