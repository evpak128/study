<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="disease_report_wizard_view_form" model="ir.ui.view">
        <field name="name">disease.report.wizard.view.form</field>
        <field name="model">disease.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Create Report" type="object"
                            name="action_print_disease_report" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" type="object"
                            class="btn btn-secondary oe_inline"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="hr_hospital_disease_report_wizard_act_window_wizard" model="ir.actions.act_window">
        <field name="name">Disease Report</field>
        <field name="res_model">disease.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="disease_report_wizard_view_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
        <field name="binding_model_id" ref="model_hr_hospital_doctor"/>
        <field name="binding_view_types">form,list</field>
        <field name="binding_type">report</field>
    </record>
</odoo>

